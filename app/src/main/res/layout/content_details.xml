<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:showIn="@layout/activity_sandwich_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orders_title"
            style="@style/TextNormal"
            android:textStyle="bold"
            android:background="#EEE"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
                android:id="@+id/detailsSandwichNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="X-BACON"
                style="@style/TextNormal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        <TextView
                android:id="@+id/detailsSandwichIngredientsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Queijo, Presunto, Bacon"
                style="@style/TextNormal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        <TextView
                android:id="@+id/detailsSandwichIngredientsPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="R$ 10,00"
                style="@style/TextNormal"
                android:textStyle="bold"
                android:background="#EEE"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="textEnd"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredients_extra"
                style="@style/TextNormal"
                android:textStyle="bold"
                android:background="#EEE"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailsSandwichExtraIngredientsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        <TextView
                android:id="@+id/detailsSandwichExtraIngredientsPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="R$ 15,00"
                style="@style/TextNormal"
                android:textStyle="bold"
                android:background="#EEE"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/detailsSandwichTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextNormal"
            android:textStyle="bold"
            android:background="#EEE"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/discount_title"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailsSandwichDiscountRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>