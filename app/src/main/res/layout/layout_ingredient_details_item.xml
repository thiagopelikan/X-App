<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/ingredientItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bacon"
            style="@style/TextNormal"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/ingredientItemPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="R$1,20"
            style="@style/TextSmall"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/ingredientItemMinusImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:foreground="?android:attr/selectableItemBackground"/>

    <TextView
            android:id="@+id/ingredientItemQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            style="@style/TextNormal"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>

    <ImageView
            android:id="@+id/ingredientItemPlusImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:layout_gravity="center_vertical"
            android:foreground="?android:attr/selectableItemBackground"/>

</LinearLayout>