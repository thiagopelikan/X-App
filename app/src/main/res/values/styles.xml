<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/default_entry_transition</item>
        <item name="android:windowSharedElementReturnTransition">@transition/default_exit_transition</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="AppCompat.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/default_entry_transition</item>
        <item name="android:windowSharedElementReturnTransition">@transition/default_exit_transition</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="TextBig">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="TextMonstrous">
        <item name="android:textSize">@dimen/text_size_monstrous</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="TextHuge">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="TextNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="TextTiny">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="TextToolbar">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
